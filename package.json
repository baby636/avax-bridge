{
  "name": "avax-bridge",
  "version": "1.0.0",
  "description": "Transfers tokens between the AVAX and BCH blockchains",
  "main": "avax-bridge.js",
  "scripts": {
    "start": "NETWORK=mainnet node avax-bridge.js",
    "test": "export AB_ENV=test && npm run prep-test && NETWORK=testnet  TEST_ENV=unit nyc --reporter=text mocha --exit --timeout 15000 test/unit",
    "test:integration": "export AB_ENV=test && npm run prep-test && NETWORK=mainnet TEST_ENV=integration nyc --reporter=text mocha --exit --timeout 30000 test/unit",
    "test:temp": "mocha -g '#token-liquidity' test/unit",
    "lint": "standard --env mocha --fix",
    "docs": "./node_modules/.bin/apidoc -i src/ -o docs",
    "coverage": "export AB_ENV=test && npm run prep-test && nyc report --reporter=text-lcov | coveralls",
    "coverage:report": "export AB_ENV=test && npm run prep-test && nyc --reporter=html mocha --timeout 15000 --exit test/unit",
    "prep-test": "node util/users/delete-all-test-users.js"
  },
  "author": "Chris Troutner <chris.troutner@gmail.com>",
  "license": "MIT",
  "apidoc": {
    "title": "startAvaxBridge",
    "url": "localhost:5000"
  },
  "repository": "Permissionless-Software-Foundation/avax-bridge",
  "dependencies": {
    "@psf/bch-js": "6.1.0",
    "avalanche": "^3.2.6",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "collect.js": "^4.16.6",
    "glob": "^7.1.6",
    "got": "^12.6.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-bch-lib": "^1.3.0",
    "kcors": "^2.2.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-convert": "^2.0.0",
    "koa-generic-session": "^2.1.1",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.3",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "line-reader": "^0.4.0",
    "mongoose": "^5.12.4",
    "nodemailer": "^6.4.17",
    "p-queue": "^6.2.1",
    "p-retry": "^4.2.0",
    "passport-local": "^1.0.0",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "shelljs": "^0.8.3",
    "slp-avax-bridge": "^1.6.0",
    "winston": "^3.3.4",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "ajv": "^5.5.2",
    "apidoc": "^1.1.0",
    "bitbox-mock": "^1.0.3",
    "chai": "^4.3.10",
    "coveralls": "^3.1.0",
    "eslint": "8.44.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^5.0.0",
    "lodash.clonedeep": "^4.5.0",
    "mocha": "^9.1.2",
    "nock": "^13.0.0",
    "nyc": "^17.0.0",
    "semantic-release": "^24.0.0",
    "sinon": "^9.2.4",
    "standard": "^17.1.0"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
